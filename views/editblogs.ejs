<!-- editblog.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Edit Blog Post</title>
</head>
<body>
    <h1>Edit Blog Post</h1>
    <form action="/editblog/<%= blog._id %>" method="post">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= blog.title %>" required>

        <label for="subtitle">Subtitle:</label>
        <input type="text" id="subtitle" name="subtitle" value="<%= blog.subtitle %>">

        <label for="description">Description:</label>
        <textarea id="description" name="description" required><%= blog.description %></textarea>

        <label for="image">Image URL:</label>
        <input type="text" id="image" name="image" value="<%= blog.image %>">

        <button type="submit">Save Changes</button>
    </form>
</body>
</html>
